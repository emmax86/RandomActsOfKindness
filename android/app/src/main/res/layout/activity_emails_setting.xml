<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/pink"
        android:id="@+id/emailTitle">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/offwhite"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/add_email_button"
            android:text="EMAIL ADDRESSES"
            android:textColor="@color/offwhite"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <layout.SquareRelativeLayout
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:id="@+id/add_email_button">

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/add_offwhite"
                android:onClick="emailAddPressed"/>

        </layout.SquareRelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/listViewsOfEmails"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:divider="@color/transparent"
        android:layout_above="@+id/email_back_button_container"
        android:layout_below="@+id/emailTitle">
    </ListView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/email_back_button_container">

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/back"
            android:id="@+id/emailBackButton"
            android:onClick="emailBackButtonPressed"/>

    </RelativeLayout>

</RelativeLayout>